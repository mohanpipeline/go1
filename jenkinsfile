pipeline {
    agent any
    environment {
        PATH = "/usr/local/go/bin:${env.PATH}"
    }

    stages {
        stage("Git Clone") {
            steps {
                git branch: 'main', url: 'https://github.com/mohansourcecode/go1.git'
            }
        }
        stage("Perform Go Build") {
            steps {
                sh 'go build -o myapp'
            }
        }
    }
}