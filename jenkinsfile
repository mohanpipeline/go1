pipeline {
    agent any
    environment {
        PATH = "/usr/local/go/bin:${env.PATH}"
    }

    stages {
        stage("Git Clone") {
            steps {
                git branch: 'main', url: 'https://github.com/mohansourcecode/go1.git'
            }
        }
        stage("Perform Go Build") {
            steps {
                sh 'go build -o myapp'
            }
        }
        stage("displaying the all files"){
            steps{
                sh 'ls -l'
            }
        }
        stage("performign the trivy scan"){
            steps{
                sh 'trivy fs . > trivyfs.txt'
            }
        }
        stage('Dependency Check') {
            steps {
                // Run OWASP Dependency-Check
                dependencyCheck additionalArguments: '--format HTML', 
                                format: 'HTML', 
                                odcInstallation: 'OWASP Dependency-Check',
                                outputDirectory: 'dependency-check-report'
            }
        }
    }
}